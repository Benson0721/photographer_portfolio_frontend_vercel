{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
